[int day=1; string name="Sonar Sweep";]
--------------------------------------
[int part=1;]
--------------------------------------
#include<bits/stdc++.h>
using namespace std;
int a[2005],n=2000,cnt;
int main(){
	cin>>a[1];
	for(int i=2;i<=n;i++){
		cin>>a[i];
		if(a[i]>a[i-1])cnt++;
	}
	cout<<cnt;
	return 0;
}


--------------------------------------
[int part=2;]
--------------------------------------

#include<bits/stdc++.h>
using namespace std;
int a[2005],b[2005],n=2000,cnt;
int main(){
	for(int i=1;i<=n;i++){
		cin>>a[i];
	}
	for(int i=1;i<=n-2;i++){
		b[i]=a[i]+a[i+1]+a[i+2];
	}
	for(int i=2;i<=n-2;i++){
		if(b[i]>b[i-1])cnt++;
	}
	cout<<cnt;
	return 0;
}
